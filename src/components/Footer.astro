---
import { SITE_CONFIG } from '@/config/site';
---

<footer class="bg-gray-50 dark:bg-gray-900 border-t border-gray-200 dark:border-gray-800">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- Company Info -->
      <div class="col-span-1 md:col-span-2">
        <div class="flex items-center space-x-2 mb-4">
          <img src="/favicon.png" alt="玩机管家" class="w-8 h-8 rounded-lg" />
          <span class="font-bold text-xl text-gray-900 dark:text-white">
            {SITE_CONFIG.name}
          </span>
        </div>
        <p class="text-gray-600 dark:text-gray-400 mb-4 max-w-md">
          {SITE_CONFIG.description}
        </p>
        <div class="flex space-x-4">
          <a href="mailto:admt@lacs.email" class="text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-200">
            {SITE_CONFIG.social.email}
          </a>
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="text-sm font-semibold text-gray-900 dark:text-white uppercase tracking-wider mb-4">
          产品
        </h3>
        <ul class="space-y-3">
          <li>
            <a href="/features" class="text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-200">
              功能特性
            </a>
          </li>
          <li>
            <a href="/pricing" class="text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-200">
              价格
            </a>
          </li>
          <li>
            <a href="/download" class="text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-200">
              下载
            </a>
          </li>
        </ul>
      </div>

      <!-- Support -->
      <div>
        <h3 class="text-sm font-semibold text-gray-900 dark:text-white uppercase tracking-wider mb-4">
          支持
        </h3>
        <ul class="space-y-3">
          <li>
            <a href="/docs" class="text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-200">
              文档
            </a>
          </li>
          <li>
            <a href="/contact" class="text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-200">
              联系我们
            </a>
          </li>
          <li>
            <a href="/about" class="text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-200">
              关于我们
            </a>
          </li>
          <li>
            <a href="/privacy" class="text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-200">
              隐私政策
            </a>
          </li>
        </ul>
      </div>
    </div>

    <!-- Bottom section -->
    <div class="mt-8 pt-8 border-t border-gray-200 dark:border-gray-800">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <p class="text-gray-600 dark:text-gray-400 text-sm">
          © 2020-{new Date().getFullYear()} 领创工作室. 保留所有权利。
        </p>
        <div class="mt-4 md:mt-0 flex space-x-6">
          <a href="/terms" class="text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 text-sm transition-colors duration-200">
            服务条款
          </a>
          <a href="/privacy" class="text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 text-sm transition-colors duration-200">
            隐私政策
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>
