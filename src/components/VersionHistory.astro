---
/**
 * 历史版本组件 - 服务器端渲染版
 * 用于在下载页面显示软件的历史版本列表
 */
import { deviceManagerVersionApi } from "@/services/versionApi";

const { versions = [] } = Astro.props;

function formatDate(dateString: string) {
  try {
    const date = new Date(dateString);
    return date.toLocaleDateString("zh-CN", {
      year: "numeric",
      month: "long",
      day: "numeric",
    });
  } catch (error) {
    return "未知日期";
  }
}

function getVersionTypeClass(version: any) {
  if (version.isStable) return "version-type-stable";
  if (version.isBeta) return "version-type-beta";
  if (version.isPrerelease) return "version-type-prerelease";
  return "version-type-stable";
}

function getVersionTypeLabel(version: any) {
  if (version.isStable) return "稳定版";
  if (version.isBeta) return "测试版";
  if (version.isPrerelease) return "预览版";
  return "稳定版";
}

function formatUpdateNotes(notes: string) {
  if (!notes) return "";
  // Simple markdown-style list preservation
  return notes
    .split("\n")
    .map((line) => {
      const trimmed = line.trim();
      if (trimmed.startsWith("*") || trimmed.startsWith("-")) {
        const content = trimmed.substring(1).trim();
        return `<div class="flex items-start space-x-2 mb-1"><span class="text-blue-500 font-bold flex-shrink-0">•</span><span>${content}</span></div>`;
      }
      return line ? `<div>${line}</div>` : "<br>";
    })
    .join("");
}
---

<div id="version-history-section" class="version-history-section">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- 标题 -->
    <div class="text-center mb-8 md:mb-12">
      <h3
        class="text-2xl md:text-4xl font-bold text-gray-900 dark:text-white mb-3 md:mb-4"
      >
        版本历史
      </h3>
      <p
        class="text-base md:text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto"
      >
        回顾玩机管家的成长历程
      </p>
    </div>

    <!-- 历史版本内容 -->
    <div id="version-history-content">
      {
        versions.length > 0 ? (
          <div class="space-y-4 md:space-y-6">
            {versions.map((version: any) => (
              <div class="version-item bg-white dark:bg-gray-800/50 rounded-2xl p-4 md:p-8 border border-gray-100 dark:border-gray-700 shadow-sm transition-all duration-300">
                <div class="version-header flex flex-col md:flex-row md:items-center justify-between gap-3 md:gap-4 mb-4 md:mb-6">
                  <div class="version-info">
                    <div class="flex items-center gap-3">
                      <div class="version-number text-xl md:text-3xl font-bold text-gray-900 dark:text-white">
                        v{version.version}
                      </div>
                      <span
                        class={`version-type px-3 py-1 rounded-full text-xs font-semibold ${getVersionTypeClass(version)}`}
                      >
                        {getVersionTypeLabel(version)}
                      </span>
                      {version.isLatest && (
                        <span class="latest-badge bg-blue-100 dark:bg-blue-900/30 text-blue-600 dark:text-blue-400 px-3 py-1 rounded-full text-xs font-semibold">
                          最新稳定版
                        </span>
                      )}
                    </div>
                    <div class="version-date text-sm text-gray-500 dark:text-gray-400 mt-2">
                      发布于 {formatDate(version.releaseDate)}
                    </div>
                  </div>
                </div>

                {version.releaseNotes && (
                  <div class="version-notes bg-gray-50 dark:bg-gray-900/50 rounded-xl p-5 mb-6">
                    <div class="font-bold text-gray-900 dark:text-white mb-3">
                      更新内容
                    </div>
                    <div
                      class="text-gray-700 dark:text-gray-300 space-y-1 leading-relaxed"
                      set:html={formatUpdateNotes(version.releaseNotes)}
                    />
                  </div>
                )}

                {!version.isLatest && (
                  <div class="version-notice p-4 bg-amber-50 dark:bg-amber-900/10 border border-amber-100 dark:border-amber-900/30 rounded-xl text-sm text-amber-800 dark:text-amber-200 flex items-center gap-3">
                    <svg
                      class="w-5 h-5 flex-shrink-0"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z"
                        clip-rule="evenodd"
                      />
                    </svg>
                    <span>
                      提示：此版本不提供下载链接。为了您的安全和最佳体验，请下载最新版本。
                    </span>
                  </div>
                )}
              </div>
            ))}
          </div>
        ) : (
          <div class="text-center py-20 bg-gray-50 dark:bg-gray-900/50 rounded-3xl border-2 border-dashed border-gray-200 dark:border-gray-800">
            <div class="w-20 h-20 bg-gray-100 dark:bg-gray-800 rounded-full flex items-center justify-center mx-auto mb-6 text-gray-400">
              <svg
                class="w-10 h-10"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                />
              </svg>
            </div>
            <h4 class="text-xl font-bold text-gray-900 dark:text-white mb-2">
              暂无版本历史
            </h4>
            <p class="text-gray-500">版本信息同步中，请稍后再试</p>
          </div>
        )
      }
    </div>
  </div>
</div>

<style>
  .version-history-section {
    @apply py-12 md:py-24;
  }

  .version-type-stable {
    @apply bg-emerald-100 text-emerald-800 dark:bg-emerald-900/30 dark:text-emerald-400;
  }

  .version-type-beta {
    @apply bg-amber-100 text-amber-800 dark:bg-amber-900/30 dark:text-amber-400;
  }

  .version-type-prerelease {
    @apply bg-indigo-100 text-indigo-800 dark:bg-indigo-900/30 dark:text-indigo-400;
  }
</style>
